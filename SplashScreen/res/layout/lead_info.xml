                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/no_of_employee"
                            android:textColor="@color/textColor" />

                        <EditText
                            android:id="@+id/no_of_employee"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
