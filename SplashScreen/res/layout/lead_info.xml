                            <EditText
                                android:id="@+id/work_phone"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/work_phone"
                                android:textColor="#000"
                                android:textColorHint="#000"
                                android:textSize="12sp" />
                        </TableRow>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:background="#87A6C3" />

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dip" >

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="@string/work_fax"
                                android:textColor="@color/textColor" />

                            <EditText
                                android:id="@+id/work_fax"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/work_fax"
                                android:textColor="#000"
                                android:textColorHint="#000"
                                android:textSize="12sp" />
                        </TableRow>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:background="#87A6C3" />

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp" >

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="@string/street"
                                android:textColor="@color/textColor" />

                            <EditText
                                android:id="@+id/street"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:gravity="top|left"
                                android:hint="@string/street"
                                android:inputType="textMultiLine"
                                android:minLines="5"
                                android:textColor="#000"
                                android:textColorHint="#000"
                                android:textSize="12sp" />
                        </TableRow>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:background="#87A6C3" />

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dip" >

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="@string/city"
                                android:textColor="@color/textColor" />

                            <EditText
                                android:id="@+id/city"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/city"
                                android:inputType="textCapWords"
                                android:maxLength="50"
                                android:textColor="#000"
                                android:textColorHint="#000"
                                android:textSize="12sp" />
                        </TableRow>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:background="#87A6C3" />

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dip" >

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="@string/state"
                                android:textColor="@color/textColor" />

                            <EditText
                                android:id="@+id/state"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/state"
                                android:inputType="textCapWords"
                                android:maxLength="50"
                                android:textColor="#000"
                                android:textColorHint="#000"
                                android:textSize="12sp" />
                        </TableRow>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:background="#87A6C3" />

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dip" >

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="@string/zip"
                                android:textColor="@color/textColor" />

                            <EditText
                                android:id="@+id/zip"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/zip"
                                android:inputType="number"
                                android:maxLength="6"
                                android:textColor="#000"
                                android:textColorHint="#000"
                                android:textSize="12sp" />
                        </TableRow>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:background="#87A6C3" />

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dip" >

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="@string/country"
                                android:textColor="@color/textColor" />

                            <EditText
                                android:id="@+id/country"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/country"
                                android:inputType="textCapWords"
                                android:maxLength="50"
                                android:textColor="#000"
                                android:textColorHint="#000"
                                android:textSize="12sp" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>

                <TableLayout
                    android:id="@+id/others_field"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" >

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dip" >

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/industry"
                            android:textColor="@color/textColor" />

                        <Spinner
                            android:id="@+id/industry"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="12sp" />
                    </TableRow>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="#87A6C3" />

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dip" >

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/lead_source"
                            android:textColor="@color/textColor" />

                        <Spinner
                            android:id="@+id/lead_source"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="12sp" />
                    </TableRow>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="#87A6C3" />

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dip" >

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/lead_status"
                            android:textColor="@color/textColor" />

                        <Spinner
                            android:id="@+id/lead_status"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="12sp" />
                    </TableRow>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="#87A6C3" />

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dip" >

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/attitude"
                            android:textColor="@color/textColor" />

                        <Spinner
                            android:id="@+id/attitude"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="12sp" />
                    </TableRow>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="#87A6C3" />

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dip" >

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/website"
                            android:textColor="@color/textColor" />

                        <EditText
                            android:id="@+id/website"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:hint="@string/website"
                            android:inputType="textUri"
                            android:maxLength="50"
                            android:textColor="#000"
                            android:textColorHint="#000"
                            android:textSize="12sp" />
                    </TableRow>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="#87A6C3" />

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp" >

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:text="@string/birthday"
                            android:textColor="@color/textColor" />

                        <RelativeLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content" >

                            <EditText
                                android:id="@+id/birthday"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/birthday"
                                android:inputType="date"
                                android:textColor="#000"
                                android:textColorHint="#000"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/birthday_clear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignRight="@+id/birthday"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_clear_search_api_holo_light" />
                        </RelativeLayout>
                    </TableRow>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="#87A6C3" />

