    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <ImageView
            android:id="@+id/others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
